generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AppState {
  QUEUED     // Dans la file d'attente
  SCANNED    // Scan terminé
  FAILED     // Échec du scan
}

enum VirusCheckStatus {
  SAFE       // Application sûre
  VIRUS      // Virus détecté
}

model User {
  id        String      @id @default(uuid()) @db.Uuid
  email     String      @unique
  firstName      String?
  lastName      String
  password  String
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  applications Application[]

  @@map("users")
}

// Modèle principal pour les applications
model Application {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Informations du fichier
  hash      String   @unique @db.VarChar(64) // SHA-256 hash
  icon      Bytes?   @map("icon") // Binary data for the app logo
  filename  String   @unique @db.VarChar(255) // Nom du fichier APK
  filePath  String?  @map("file_path") @db.VarChar(500) // Optionnel si stockage en DB
  fileData  Bytes?   @map("file_data") // Contenu binaire du fichier APK
  fileSize  BigInt   @map("file_size") // Taille en bytes
  mimeType  String?  @map("mime_type") @db.VarChar(100)
  
  // Informations éditables par l'utilisateur
  name      String?  @db.VarChar(255)
  comment   String?  @db.Text
  
  // Statut de vérification antivirale
  virusCheckStatus AppState @default(QUEUED) @map("virus_check_status")
  scanResult       VirusCheckStatus? @map("scan_result") // Résultat final du scan

  permalink  String?   @db.VarChar(500) // Lien vers le rapport VirusTotal
  scanError  String?   @map("scan_error") @db.Text // Message d'erreur si échec
  
  
  // Timestamps
  uploadDate  DateTime @default(now()) @map("upload_date")
  lastChecked DateTime? @map("last_checked")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  virusTotalChecks VirusTotalCheck[]
  
  @@index([hash])
  @@index([virusCheckStatus])
  @@index([uploadDate])
  @@map("applications")
}

// Historique des vérifications VirusTotal (pour traçabilité)
model VirusTotalCheck {
  id            String   @id @default(uuid()) @db.Uuid
  
  applicationId String   @map("application_id") @db.Uuid
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  // Détails de la vérification
  status        VirusCheckStatus
  responseDate   DateTime  @default(now()) @map("response_date")
  // requestDate  DateTime? @map("request_date")

  // Statistiques
  positives     Int?
  total         Int?

  scan_date  DateTime? @map("scan_date")
  permalink  String @unique   @db.VarChar(500) // Lien vers le rapport VirusTotal

  scans    Json?     @map("scans") // Détails des scans par antivirus

  @@index([applicationId])
  @@index([responseDate])
  @@map("virus_total_checks")
}